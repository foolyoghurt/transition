@keyframes fadein {
    from { opacity: 0; }
    to { opacity: 1; }
}
@keyframes fadeout {
    from { opacity: 1; }
    to { opacity: 0; }
}

/* Be sure to use the shorthand, or something weird may happen (I don't know why) */
.mb-fade.out {
    opacity: 0;
    animation: fadeout 600ms ease;
}

.mb-fade.in {
    opacity: 1;
    animation: fadein 600ms ease 400ms;
}
